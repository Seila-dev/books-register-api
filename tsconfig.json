{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "./",                                 
    "resolveJsonModule": true,                        
    "outDir": "./dist",                                   
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}