generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Product {
  id             Int       @id @default(sequence())
  image          String
  title          String
  stars          Int?
  description    String?
  startedreading String?
  endedreading   String?
  genreId        Int?      @map("genre_id")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  genres         ProductGenre[] // Relacionamento com a tabela intermedi치ria

  @@map("products")
}

model Genre {
  id       Int             @id @default(sequence())
  name     String
  products ProductGenre[]  // Relacionamento com a tabela intermedi치ria

  @@map("genres")
}

model ProductGenre {
  productId Int
  genreId   Int

  product   Product @relation(fields: [productId], references: [id])
  genre     Genre   @relation(fields: [genreId], references: [id])

  @@id([productId, genreId])  // Chave prim치ria composta
  @@map("product_genres")     // Nome da tabela intermedi치ria
}



model User {
  id           Int      @id @default(sequence())
  email        String   @unique
  createdAt    DateTime @default(now()) @map("created_at")
  firstName    String   @map("first_name")
  lastName     String   @map("last_name")
  passwordHash String   @map("password_hash")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("users")
}
