generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Genre {
  id        Int      @id @default(autoincrement())
  name      String
  products  Product[]

  @@map("genres")
}

model Product {
  id             Int     @id @default(autoincrement())
  image          String? 
  title          String 
  stars          Int?
  genreId        Int? @map("genre_id")
  description    String?
  startedreading String?
  endedreading   String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @default(now()) @updatedAt @map("updated_at")
  userid         Int?
  users          users?  @relation(fields: [userid], references: [id], map: "fk_user")
  genres     Genre? @relation(fields: [genreId], references: [id], map: "fk_categories")

  @@map("products")
}

model users {
  id            Int        @id @default(autoincrement())
  name          String?    
  email         String?    
  passwordHash  String?    
  products      Product[]
}
